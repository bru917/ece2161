<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="?android:attr/listPreferredItemHeight"
  android:layout_width="fill_parent" >

    <ImageView
        android:id="@+id/resultImage"
        android:contentDescription="@string/list_thumb_description"
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/resultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/resultImage"
        android:layout_toRightOf="@id/resultImage"
        android:layout_alignParentTop="true"
        android:text="@string/list_default_title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/resultDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/resultImage"
        android:layout_toRightOf="@id/resultImage"
        android:layout_below="@id/resultImage"
        android:layout_alignParentBottom="true"
        android:text="@string/list_default_description"
        android:textAppearance="?android:attr/textAppearanceSmall" />
  
</RelativeLayout>
